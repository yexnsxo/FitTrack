<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitTrack" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 시스템 창 배경색을 Main40 색상으로 지정하여 스플래시 화면 배경으로 사용 -->
        <item name="android:windowBackground">@color/main_40</item>
        <!-- 상태바 색상도 통일감 있게 설정 (선택 사항) -->
        <item name="android:statusBarColor">@color/main_40</item>
    </style>

    <style name="Theme.FitTrack.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_40</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.FitTrack</item>
    </style>
</resources>